<%= form_with model: @student do |form| %>

<% if @student.errors.any? %>
    <% @student.errors.full_messages.each do |message| %>
        <p><%puts "#{message}" %></p>
    <%end%>
<%end%>

<div>
    <%= form.label :first_name, class:"form-label"%><br>
    <%= form.text_field :first_name,class:"form-control" %>
</div>
<div>
    <%= form.label :last_name, class:"form-label"%><br>
    <%= form.text_field :last_name,class:"form-control" %>
</div>
<div>
    <%= form.label :email , class:"form-label"%><br>
    <%= form.email_field :email,class:"form-control" %>
</div>
<div>
    <%= form.label :date_of_birth, class:"form-label"%><br>
    <%= form.date_field :date_of_birth,class:"form-control" %>
</div>
<%= form.submit %>
<%end%>